h1 New user

form(name="newUserForm" role="form" novalidate)

  label Name
  input(
    type="text"
    ng-model="user.name"
    required
  )

  label Email
  input(
    type="email"
    ng-model="user.email"
    required
  )

  label Password
  input(
    type="password"
    ng-model="user.password"
    required
  )

  input.btn.waves-effect.waves-light(
    type="submit"
    ng-click="save(user)"
    ng-disabled="newUserForm.$invalid"
  )
